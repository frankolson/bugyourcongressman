<main class="byc-masthead byc-masthead-background-style-1" role="main">
  <div class="container">
    <div class="row">
      <div class="col-md-10 text-center text-md-left">
        <h1 class="mb-3">
          <%= t('.title') %>
        </h1>
      </div>
    </div>
  </div>
</main>

<div class="byc-masthead-followup">
  <div class="container">
    <div class="row">
      <div class="col-md-10 mx-auto">
        <%= render 'search_form' %>
      </div>
    </div>

    <div class="row justify-content-center mt-4">
      <% if @officials.nil? %>
        <h3 class="text-center my-5">
          <i class="fas fa-search text-muted"></i><br />
          Try searching your address
        </h3>
      <% else %>
        <% if @officials.empty? %>
          <h3 class="text-center my-5">
            <i class="fas fa-search text-muted"></i><br />
            Hmmm... that address doesn't seem to have any congress officials. Try another.
          </h3>
        <% else %>
          <%= render partial: 'official', collection: @officials %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
